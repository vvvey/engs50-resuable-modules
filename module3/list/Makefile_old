CFLAGS=-Wall -pedantic -std=c11 -g

all:	lput_tests lget_tests lapply_tests lremove_tests 

list.o:	list.c list.h
		gcc $(CFLAGS) -c list.c

# lput tests

lput_tests: lput_test1 lput_test2 lput_test3

lput_test1.o: lput_test1.c list.h
		gcc $(CFLAGS) -c lput_test1.c

lput_test1: lput_test1.o list.o
		gcc $(CFLAGS) lput_test1.o list.o -o lput_test1

lput_test2.o: lput_test2.c list.h
		gcc $(CFLAGS) -c lput_test2.c

lput_test2: lput_test2.o list.o
		gcc $(CFLAGS) lput_test2.o list.o -o lput_test2

lput_test3.o: lput_test3.c list.h
		gcc $(CFLAGS) -c lput_test3.c

